
<div class="ui horizontal divider header">
  <h1>Services</h1>
  <div class="ui label">
    {{pluralize model.countActive " aucun service" " 1 service" " Services"}}
  </div>
  <ul>
    {{#each model.services as |service|}}
      <li class="ui button {{if service.active "positive" ""}}" {{action "toogleActive" service}}>{{service.name}} {{service.price}}€</li><br><br>
    {{/each}}
  </ul>
  <hr>
  Total : {{model.sumActive}} €
</div>
<div class="ui form">
  <div class="ui field">
    <Input @value={{model.codePromo}}/>
  </div>
</div>
<div class="ui label">
  {{model.promo}}
</div>
{{outlet}}